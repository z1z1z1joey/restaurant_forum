<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @restaurant.name %></h1>
      <p>[<%= @restaurant.category.name %>]</p>
    </div>

    <div class="col-md-4">
      <%= image_tag @restaurant.image, class: "img-responsive center-block" %>
      <br>
      <div class="well">
        <ul class="list-unstyled">
          <li><strong>Opening Hour:</strong> <%= @restaurant.opening_hours %></li>
          <li><strong>Tel:</strong> <%= @restaurant.tel %></li>
          <li><strong>Address:</strong> <%= @restaurant.address %></li>
        </ul>
      </div>
    </div>
    <div class="col-md-8">
      <%= simple_format @restaurant.description %>
      <hr>
       <%= link_to 'Dashboard', dashboard_restaurant_path(@restaurant), class: "btn btn-primary" %>
<!--        <% if @restaurant.is_favorited?(current_user) %>
          <%= link_to 'Unfavorite', unfavorite_restaurant_path(@restaurant), method: :post, class: "btn btn-info" %>
       <% else %>
          <%= link_to 'Favorite', favorite_restaurant_path(@restaurant), method: :post, class: "btn btn-primary" %>
       <% end %> -->
       <%= render partial: "shared/favorite", locals: {restaurant: restaurant} %>
       
<!--        <% if @restaurant.is_liked?(current_user) %>
       <%= link_to 'Unlike', unlike_restaurant_path(@restaurant), method: :post, class: "btn btn-info" %>
       <% else %>
       <%= link_to 'Like', like_restaurant_path(@restaurant), method: :post, class: "btn btn-primary" %>
       <% end %> -->
       <%= render partial: "shared/like", locals: {restaurant: restaurant} %>

    </div>

    <hr>

  </div>
</div>
<div class="container">
  <div class="row">

   <% @restaurant.comments.each do |comment| %>
      <div>
        <h4><%= comment.user.email.split("@").first %></h4>
        <p><%= simple_format comment.content %></p>
        <p class="text-muted">
          <em><%= time_ago_in_words(comment.created_at) %> ago</em>   
          <% if current_user.admin? %>
                <%= link_to "Delete", restaurant_comment_path(@restaurant, comment), method: :delete %>
          <% end %>
        </p>
      </div>
      <hr>
   <% end %>

   <%= form_for [@restaurant, @comment] do |f| %>
    <div class="form-group">
      <%= f.text_area :content, placeholder: "留個言吧", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
      <%= f.button "Cancel", type: :reset, class: "btn btn-default" %>
    </div>
    
  <% end %>
  </div>
</div>